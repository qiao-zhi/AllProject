package arithmeticTest;

/**
 * 希尔排序实现
 * 
 * @author: qlq
 * @date : 2018年4月2日下午9:10:25
 */
public class XierInsert {

	public static void main(String a[]) {
		int array[] = { 9, 8, 7, 6, 5, 4, 3, 2, 1, 0 };
		xierInsertImpl(array);
		// 打印排序后的数组
		for (int i : array) {
			System.out.print(i + "   ");
		}
	}

	/**
	 * 主要算法实现
	 * 
	 * @param arr
	 *            需要排序的数组
	 */
	public static void xierInsertImpl(int[] arr) {
		int gap = arr.length / 2,temp,j;// 定义初始化组数
		while (gap > 0) {
			for (int i = gap; i < arr.length; i++) {// 从后面的第一个
				temp=arr[i];
				j=i-gap;//对相聚gap的元素进行排序
				while(j>=0){
					
				}
				
			}
		}

	}

}
